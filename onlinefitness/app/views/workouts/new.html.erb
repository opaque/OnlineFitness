<h1>New workout</h1>

<% form_for([@user,@workout]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label "Date" %><br />
    <%= f.datetime_select :date, :start_year => Date.today.year, :end_year => Date.today.year + 5, :discard_hour => true %>
  </p>
  <p>
    <%= f.label "Exercise"%><br />
    <%= f.select :exercise, %w{Biceps Triceps} %>
  </p>
  <p>
    <%= f.label "Expected Reps" %><br />
    <%= f.text_field :expectedreps %>
  </p>
  <p>
    <%= f.label "Expected sets" %><br />
    <%= f.text_field :expectedsets %>
  </p>

  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', user_workouts_path(@user) %>